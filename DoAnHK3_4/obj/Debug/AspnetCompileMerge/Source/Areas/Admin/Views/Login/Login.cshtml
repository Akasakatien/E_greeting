        <script src="@Url.Content("~/Content/")admin/plugins/bower_components/sidebar-nav/dist/sidebar-nav.min.js"></script>
        <!--slimscroll JavaScript -->
        <script src="@Url.Content("~/Content/")admin/js/jquery.slimscroll.js"></script>
        <!--Wave Effects -->
        <script src="@Url.Content("~/Content/")admin/js/waves.js"></script>
        <!-- Custom Theme JavaScript -->
        <script src="@Url.Content("~/Content/")admin/js/custom.min.js"></script>
        <!-- Sparkline chart JavaScript -->
        <script src="@Url.Content("~/Content/")admin/plugins/bower_components/jquery-sparkline/jquery.sparkline.min.js"></script>
        <script src="@Url.Content("~/Content/")admin/plugins/bower_components/jquery-sparkline/jquery.charts-sparkline.js"></script>
