@model IEnumerable<DoAnHK3_4.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MyAdminLayoutPage.cshtml";
}


<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <h1>List of Category</h1>
            <h3>@Html.ActionLink("Create New", "Create")</h3>
            <h1 class="text-danger">@ViewContext.TempData["error"]</h1> 

            <div class="table-responsive">
                <table id="myTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.name)
                            </th>
                            <th>Option</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                    <a href="@Url.Action("Delete", "Categories", new { id = item.id })" onclick="return confirm('Are you sure?')">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<script>

    $(document).ready(function () {
        $('#myTable').DataTable();
    });


</script>

