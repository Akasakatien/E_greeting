@model DoAnHK3_4.Models.Account

@using BotDetect.Web.Mvc;




<style>
    td.old {
        padding-left: 10px;
    }

    .khoangtrang {
        margin-bottom: 100px;
    }

    .khoangtrangRis {
        margin-top: 30px;
        margin-bottom: 30px;
        font-size: 20px;
    }
</style>

<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl"
      rel="stylesheet" type="text/css" />

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            @using (Html.BeginForm("AddAccIF", "InfoAccount", FormMethod.Post))
            {
                <div class="khoangtrang"></div>

                <table style="width:500px;margin-left: 358px;">
                    <tr>
                        <td><div class="khoangtrangRis">Infomation</div></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td style="color:red">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>

                        <td>
                            @Html.HiddenFor(model => model.username)
                            @Html.HiddenFor(model => model.password)
                            @Html.HiddenFor(model => model.answer)
                            @Html.HiddenFor(model => model.question)
                            @Html.HiddenFor(model => model.roldId)
                        </td>
                    </tr>
                    <tr>
                        <td class="old">
                            FirstName
                        </td>
                        <td>

                            @Html.TextBoxFor(model => model.firstName, new { required = "required", name = "firstName", placeholder = "Enter firstName", @class = "input-block-level" })
                        </td>

                    </tr>
                    <tr>
                        <td class="old"> LastName</td>
                        <td>
                            @Html.TextBoxFor(model => model.lastName, new { required = "required", name = "lastName", placeholder = "Enter lastName", @class = "input-block-level" })

                        </td>

                    </tr>


                    <tr>
                        <td class="old"> Address</td>
                        <td>
                            @Html.TextBoxFor(model => model.address, new { required = "required", name = "address", placeholder = "Enter address", @class = "input-block-level" })

                        </td>

                    </tr>


                    <tr>
                        <td class="old"> Mobile</td>
                        <td>
                            @Html.TextBoxFor(model => model.mobile, new { placeholder = "Enter mobile" })

                        </td>

                    </tr>
                    <tr>
                        <td class="old">Gender</td>
                        <td>@Html.DropDownListFor(model => model.gender, listGender)</td>
                    </tr>
                    <tr>
                        <td class="old"> Country</td>
                        <td>
                            @Html.DropDownListFor(model => model.country, list)
                        </td>

                    </tr>



                    <tr>
                        @{ MvcCaptcha exampleCaptcha = new MvcCaptcha("ExampleCaptcha"); }
                        <td></td>
                        <td>
                            @Html.Captcha(exampleCaptcha)
                        </td>

                    </tr>
                    <tr>
                        <td></td>
                        <td>@Html.TextBox("CaptchaCode", null, new { placeholder = "Enter CaptCha", @class = "input-block-level" })</td>
                    </tr>
                    <tr>
                        <td><input type="submit" class="btn btn-info" value="submit" /></td>
                    </tr>
                </table>
                <div class="khoangtrang"></div>

                            }
        </div>
        <div class="col-md-4"></div>
    </div>
</div>


