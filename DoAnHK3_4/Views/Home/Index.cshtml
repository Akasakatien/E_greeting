    </ul>
</div>
<!--BANNER END-->
<!--CONTANT START-->
<div class="contant">

    <!--UPCOMING CARDS SECTION START-->
    <section class="gray-bg">
        <div class="container">
            <!--SECTION HEADER START-->
            <div class="sec-header">
                <p>Upcoming Event</p>
                <div>
                    @ViewBag.nameEvent
                    (@ViewBag.date)
                    
                </div>
                <span></span>
                <span></span>
                <span></span>
            </div>
            <!--SECTION HEADER END-->
            <div class="customNavigation">
                <a class="btn prev"><i class="fa fa-angle-left"></i></a>
                <a class="btn next"><i class="fa fa-angle-right"></i></a>
            </div>
            <div id="owl-carousel" class="owl-carousel owl-theme">
                @foreach (var greetingEvent in ViewBag.greetings)
                {
                    <!--COURSE ITEM START-->
                    <div class="gallery">
                        <ul class="row">
                            <li class="span3">
                                <img src="@Url.Content("~/content/")uploadedgreeting/@greetingEvent.photo" alt="" style="width:270px;height:200px;">
                                <div class="social-icons">
                                    <a href="@Url.Content("~/content/")uploadedgreeting/@greetingEvent.photo" rel="prettyPhoto[gallery2]" title="@ViewBag.nameEvent"><i class="fa fa-search"></i></a>
                                    <br>
                                    <a href="@Url.Action("Personalize", "Cards", new {id = greetingEvent.id })" title="Send"><i class="fa fa-envelope"></i></a>
                                    <a onclick="fbshareCurrentPage('1173')" title="Share on Facebook"><i class="fa fa-facebook"></i></a>
                                    <a onclick="tweetCurrentPage('1173')" target="_blank" title="Share on Twitter"><i class="fa fa-twitter"></i></a>
                                    <a id="ref_gp" onclick="googleCurrentPage('1173')" title="Share on Google+"><i class="fa fa-google-plus"></i></a>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <!--COURSE ITEM END-->
                }

            </div>
        </div>
        <div class="sec-header">
            <a href="@Url.Action("Index", "Cards")" class="btn-style">View More Cards</a>
        </div>
    </section>
    <!--UPCOMING CARDS SECTION END-->
    <section>      
        <div style="height:25px;"></div>
