
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayoutPage.cshtml";
}

<!--  Home -->
<div class="banner">
    <marquee direction="left"><h2 style="font-size:45px;color:red;padding: 10px 0px 0px 0px;">Over <b>30</b> Million eGreetings Sent</h2></marquee>
    <!--<ul class="bxslider">--> 	<ul class="">
