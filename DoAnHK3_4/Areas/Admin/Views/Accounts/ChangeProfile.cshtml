@using (Html.BeginForm("ChangeProfile", "Accounts", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div class="white-box">
                <h3 class="box-title m-b-0">Edit Account</h3>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="exampleInputuname" class="col-sm-3 control-label">@Html.LabelFor(model => model.username)</label>
                        <div class="col-sm-12">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="ti-user"></i></div>
                                @Html.DisplayTextFor(model => model.username)
                                @Html.HiddenFor(model => model.username)

                            </div>


                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-3 control-label">@Html.LabelFor(model => model.password)*</label>
                        <div class="col-sm-12">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="ti-lock"></i></div>
                                @Html.EditorFor(model => model.password, new { htmlAttributes = new { type = "password", id = "exampleInputpwd2", placeholder = "Enter pwd", @class = "form-control" } })
                            </div>
                            <div class="help-block with-errors">@Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })</div>

                        </div>
                    </div>
                    @*<div class="form-group">
                            <label for="inputPassword4" class="col-sm-3 control-label">Re Password*</label>
                            <div class="col-sm-9">
                                <div class="input-group">
