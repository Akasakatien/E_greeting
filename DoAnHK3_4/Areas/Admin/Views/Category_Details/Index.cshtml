@model IEnumerable<DoAnHK3_4.Models.Category_Details>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MyAdminLayoutPage.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <h1>List of Catogory Details</h1>
            <h3>@Html.ActionLink("Create", "Create")</h3>
            <h1 class="text-danger">@ViewContext.TempData["error"]</h1> 

            <div class="table-responsive">
                <table id="myTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.dateOfEvent)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Category.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.status)
                            </th>
                           
                            <th>Option</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.dateOfEvent)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.status)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                    <a href="@Url.Action("Delete", "Category_Details", new { id = item.id })" onclick="return confirm('Are you sure?')">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>


<script>

    $(document).ready(function () {
        $('#myTable').DataTable();
    });


</script>